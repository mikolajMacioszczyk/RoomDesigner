@{
    ViewData["Title"] = "Home Page";
}

@model RoomDesigner.Models.RoomDesignerViewModel

<img id="roomImage" src="https://localhost:44381/api/room/blue/large/teapot/black" alt="room image" />

<div>
    <label for="wallColor">Wall Color</label>
    <select id="wallColor" asp-items="Model.AvailableWallColors" onchange="changePhoto()"></select>
</div>

<div>
    <label for="tvSize">TV Size</label>
    <select id="tvSize" asp-items="Model.AvailableTvSize" onchange="changePhoto()"></select>
</div>

<div>
    <label for="decorations">Decoration</label>
    <select id="decorations" asp-items="Model.AvailableDecorations" onchange="changePhoto()"></select>
</div>

<div>
    <label for="carpet">Carpet</label>
    <select id="carpet" asp-items="Model.AvailableCarpet" onchange="changePhoto()"></select>
</div>

<script>
    function changePhoto(){
        const roomImage = document.getElementById('roomImage');
        const wallColor = document.getElementById('wallColor');
        const tvSize = document.getElementById('tvSize');
        const decorations = document.getElementById('decorations');
        const carpet = document.getElementById('carpet');

        var imageUrl = `https://localhost:44381/api/room/${wallColor.value}/${tvSize.value}/${decorations.value}/${carpet.value}`;
        roomImage.src = imageUrl;
    }
</script>