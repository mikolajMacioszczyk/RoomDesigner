@{
    ViewData["Title"] = "Home Page";
}

@model RoomDesigner.Models.RoomDesignerViewModel

<div class="selector-container">
    <img id="roomImage" src="https://localhost:44381/api/room/blue/large/books/black" alt="room image" />

    <select class="wall-select" id="wallColor" asp-items="Model.AvailableWallColors" onchange="changePhoto()"></select>

    <select class="tv-select" id="tvSize" asp-items="Model.AvailableTvSize" onchange="changePhoto()"></select>

    <select class="decorations-select" id="decorations" asp-items="Model.AvailableDecorations" onchange="changePhoto()"></select>

    <select class="carpet-select" id="carpet" asp-items="Model.AvailableCarpet" onchange="changePhoto()"></select>
</div>

<script>
    function changePhoto(){
        const roomImage = document.getElementById('roomImage');
        const wallColor = document.getElementById('wallColor');
        const tvSize = document.getElementById('tvSize');
        const decorations = document.getElementById('decorations');
        const carpet = document.getElementById('carpet');

        var imageUrl = `https://localhost:44381/api/room/${wallColor.value}/${tvSize.value}/${decorations.value}/${carpet.value}`;
        roomImage.src = imageUrl;
    }
</script>